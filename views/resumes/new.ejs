<% layout("/layout/boilerplate.ejs") %>

<div style="color: black;">
  <br><br><br><br><br>
  <form method="POST" action="/portfolio" class="row g-3 needs-validation offset-2" novalidate enctype="multipart/form-data">
    <h5>Your Details</h5>
    <div class="col-md-4 position-relative">
      <label for="fullName" class="form-label">Full Name</label>
      <input type="text" class="form-control" id="fullName" name="name" required>
      <div class="valid-tooltip">
        Looks good!
      </div>
    </div>
    <div class="col-md-4 position-relative">
      <label for="description" class="form-label">What Describe's You?</label>
      <input type="text" class="form-control" id="description" name="describeYou" placeholder="eg: FullStack Developer" required>
      <div class="valid-tooltip">
        Looks good!
      </div>
    </div>

    <div class="col-md-6 position-relative">
      <label for="shortDescription" class="form-label">Description</label>
      <textarea class="form-control" id="shortDescription" name="description" required></textarea>
      <div class="invalid-tooltip">
        Please provide a short description.
      </div>
    </div>

    <div class="col-md-6 position-relative">
      <br>
      <label for="imageform" class="form-label">Upload Image</label>
      <input class="form-control" id="imageform" name="image" type="file" required>
      <br>
    </div>

    <!-- Contact Details -->
    <div class="row">
      <h5>Your Contact Details</h5>
      <div class="col-md-5 position-relative">
        <label for="phoneNumber" class="form-label">Phone Number</label>
        <input type="text" class="form-control" id="phoneNumber" name="contact" required>
        <div class="invalid-tooltip">
          Please provide your contact details.
        </div>
      </div>
      <div class="col-md-6 position-relative">
        <label for="email" class="form-label">Gmail</label>
        <input type="email" class="form-control" id="email" name="gmail" required>
        <div class="invalid-tooltip">
          Please provide your email address.
        </div>
      </div>
      <div class="col-md-6 position-relative">
        <label for="address" class="form-label">Address</label>
        <textarea class="form-control" id="address" name="address" required></textarea>
        <div class="invalid-tooltip">
          Please provide your current address.
        </div>
      </div>
    </div>

    <!-- Education Details -->
    <div>
      <h5>Your Education Details</h5>
      <div class="col-md-6 position-relative">
        <label for="institute" class="form-label">Institute/University Name</label>
        <input type="text" class="form-control" id="institute" name="institute" required>
        <div class="invalid-tooltip">
          Please provide your institute/university name.
        </div>
      </div>
    </div>
    <div class="col-md-6 position-relative">
      <label for="course" class="form-label">Course Name</label>
      <input type="text" class="form-control" id="course" name="course" required>
      <div class="invalid-tooltip">
        Please provide your course name.
      </div>
      <br><br>
    </div>

    <!-- Other Details -->
    <div class="row">
      <h5>Other Details</h5>
      <!-- Other Skills and Interests -->
      <div class="col-md-6 position-relative">
        <br>
        <label for="otherSkills" class="form-label">Skills</label>
        <input type="text" class="form-control" id="otherSkills" name="skill" placeholder="eg: C++, Python">
      </div>
      <div class="col-md-6 position-relative">
        <br>
        <label for="interests" class="form-label">Interests In?</label>
        <input type="text" class="form-control" id="interests" name="interest" placeholder="eg: Chess, Cricket" required>
        <div class="invalid-tooltip">
          Please provide your interests.
        </div>
      </div>

      <div class="col-md-6 position-relative">
        <br>
        <label for="languages" class="form-label">Languages Known?</label>
        <input type="text" class="form-control" id="languages" name="language" placeholder="eg: English, Spanish" required>
        <div class="invalid-tooltip">
          Please provide the languages you know.
        </div>
      </div>
    </div>

    <!-- Submit Button -->
    <div class="col-12">
      <br>
      <button class="btn" style="background-color: rgb(41, 43, 145);" type="submit">Submit Details</button>
      <br><br>
    </div>
  </form>
</div>
