    }
    .image {
        width: 100px;
        height: 100px;
    }
    .rightPanel {
        margin-left: 9rem;
        margin-right: 1rem;
    }
    .login {
        margin-left: 1rem !important;
        margin-right: 4rem !important;
    }
}
</style>

<div style="color: black;">
    <br><br><br><br><br>
    <form method="POST" action="/portfolio/<%= portfolio.id %>?_method=PUT" class="row g-3 needs-validation offset-1" novalidate enctype="multipart/form-data">
        <h4>Update Your Portfolio</h4>
      <h5>Your Details</h5>
      <div class="col-md-4 position-relative">
        <label for="fullName" class="form-label">Full Name</label>
        <input type="text" class="form-control" id="fullName" name="name" value="<%= portfolio.name %>" required>
        <div class="valid-tooltip">
          Looks good!
        </div>
      </div>
      <div class="col-md-4 position-relative">
        <label for="description" class="form-label">What Describe's You?</label>
        <input type="text" class="form-control" id="description" name="describe_you" value="<%= portfolio.describeYou %>" required>
        <div class="valid-tooltip">
          Looks good!
        </div>
      </div>
  
      <div class="col-md-6 position-relative">
        <label for="shortDescription" class="form-label">Description</label>
        <textarea class="form-control" id="shortDescription" name="description"required><%= portfolio.description %> </textarea>
        <div class="invalid-tooltip">
          Please provide a short description.
        </div>
      </div>
      <div class="col-md-7 position-relative">
        <br>
        <div>
          <p>Original Images</p>
          <% images.forEach((image) => { %>
            <img src="/<%= image.imageUrl %>" alt="img" style="width: 50px;">
          <% }); %>
        </div> <br>
        <label for="imageform" class="form-label">Upload Image</label>
      <input class="form-control" id="imageform" name="image" type="file" >
        <br>
      </div>
  
      <!-- Contact Details -->
      <div class="row">
        <h5>Your Contact Details</h5>
        <div class="col-md-5 position-relative">
          <label for="phoneNumber" class="form-label">Phone Number</label>
          <input type="text" class="form-control" id="phoneNumber" name="contact" value="<%= contact.contact %>" required>
          <div class="invalid-tooltip">
            Please provide your contact details.
          </div>
        </div>
        <div class="col-md-6 position-relative">
          <label for="email" class="form-label">Gmail</label>
          <input type="email" class="form-control" id="email" name="gmail" value="<%= contact.gmail %>" required>
          <div class="invalid-tooltip">
            Please provide your email address.
          </div>
        </div>
        <div class="col-md-6 position-relative">
          <label for="address" class="form-label">Address</label>
          <textarea class="form-control" id="address" name="address" required><%= contact.address %></textarea>
          <div class="invalid-tooltip">
            Please provide your current address.
          </div>
        </div>
      </div>
  
      <!-- Education Details -->
      <div>
        <h5>Your Education Details</h5>
        <div class="col-md-6 position-relative">
          <label for="institute" class="form-label">Institute/University Name</label>
          <input type="text" class="form-control" id="institute" name="institute" value="<%= education.institute %>" required>
          <div class="invalid-tooltip">
            Please provide your institute/university name.
          </div>
        </div>
      </div>
      <div class="col-md-6 position-relative">
        <label for="course" class="form-label">Course Name</label>
        <input type="text" class="form-control" id="course" name="course" value="<%= education.course %>" required>
        <div class="invalid-tooltip">
          Please provide your course name.
        </div>
        <br><br>
      </div>
  
      <!-- Other Details -->
      <div class="row">
        <h5>Other Details</h5>
        <div class="col-md-6 position-relative">
          <label for="skills" class="form-label">Skill/Expertised In?</label>
          <input type="text" class="form-control" id="skills" name="skill" value="<%= skills %>" required>
          <div class="invalid-tooltip">
            Please provide your skills or expertise.
          </div>
          <br>
        </div>
        <div class="col-md-6 position-relative">
            <br>
          <label for="interests" class="form-label">Interests In?</label>
          <input type="text" class="form-control" id="interests" name="interest" value="<%= interests.interest %>" required>
          <div class="invalid-tooltip">
            Please provide your interests.
          </div>
        </div>
  
        <div class="col-md-6 position-relative">
          <br>
          <label for="languages" class="form-label">Languages Known?</label>
          <input type="text" class="form-control" id="languages" name="language" value="<%= languages %>"required>
          <div class="invalid-tooltip">
            Please provide the languages you know.
          </div>
        </div>
      </div>
  
      <!-- Submit Button -->
      <div class="col-12">
        <br>
        <button class="btn" style="background-color: rgb(41, 43, 145);" type="submit">Submit Details</button>
        <br><br>
      </div>
    </form>
  </div>
  