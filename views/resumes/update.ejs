<% layout("/layout/boilerplate.ejs") %>
<style>
    input, textarea {
    color: black !important; /* Input text color */
    background-color: white !important; /* Input background color */
}
body {
    background-color: #021526;
}
.container {
    display: flex;
    flex-direction: row;
    margin: 0 0 0 0 !important;
    padding: 0 !important;

} 
.container1 {
    display: flex;
    flex-direction: row;
    margin: 0px !important;
    padding: 0 !important;
    height: 100vh;
}
#navbar {
    background-color: #122F53 !important;
    height: 80px !important;
    z-index: 1000 !important;
    top: 0 !important; 
    position: fixed !important;
    width: 100%;
}
* {
    color: white !important;
    font-size: 20px;
}
#homeIcon {
    font-size: 30px !important;
    margin-right: 0;
    margin-left: 1rem;
    transition: transform 0.3s ease !important;
}
#homeIcon:hover {
    transform: scale(2, 1) !important;
    margin-right: 1rem;
}
.nav-item {
    opacity: 0.9 !important;
    margin-right: 1rem;
    margin-left: 0;
}
.nav-item:hover {
    opacity: 1 !important;
    font-size: 21px;
}
.nav-link {
    text-decoration: none;
}
.leftPanel {
    display: flex;
    flex-direction: column;
    width: 370px !important;
    background-color: #0F1D2F;
    margin-left: 0;
    align-items: center;
    position: fixed;
    height: 100%;
}
.leftPanel p {
    opacity: 0.8;
}
.leftPanel p:hover {
    opacity: 1;
    cursor: pointer;
}

.image{
    width: 259px;
    height: 248px;
    border: 1px solid #ffffff;
    border-radius: 50%;
    margin-top: 5rem;
    margin-bottom: 1rem;
    margin-left: 1rem;
    margin-right: 1rem;
}
.rightPanel {
    height: 100vh;
    margin-left: 20rem;
    margin-top: 5rem;
}
.rightPanel li {
    opacity: 0.8;
    font-size: medium;
    margin-left: 3rem;
}
.rightPanel h6{
    margin-top: 1rem;
}
.rightPanel h5{
    opacity: 0.5;
    font-size: medium;
}
.container2 {
    display: flex;
    margin-top: 6rem !important;
    flex-direction: column;
    margin-left: 8rem !important;
    width: 100% !important;
}
.card {
    background-color: #122F53 !important;
    height: 100px !important;
    margin-left: 1rem;
    width: 100%;
    margin-bottom: 0 !important;
    align-items: start !important;
    display: flex !important;
    flex-direction: row !important;
}
.cardBody {
    margin-left: 1rem;
    margin-top: 1rem;
}
.items {
    position: relative;
    bottom: 3rem;
    right: -930px;
    display: inline;
}
.home-img img {
    width: 97px;
    height: 98px;
}
/* .card-text {
    font-size: 15px;
} */
input, textarea {
    color: black !important; /* Input text color */
    background-color: white !important; /* Input background color */
}

#badge{
    background-color: #0759a1;
    color: white !important;
    border: none;
    height: 40px;
    font-size: medium;
    margin-top: 0.5rem;
}
#badge2{
    color: white !important;
    border: none;
    font-size: medium;
    height: 40px;
    margin-left: 1rem;
    margin-top: 0.5rem;
}
.delete {
    display: flex;
    flex-direction: row;
}
.border {
    border-radius: 10px;
    height: 70%;
}
.alert {
    height: 60px !important;
    margin-top: 5rem!important;
    z-index: 1000 !important;
    padding: 1 !important;
    display: inline !important;
    position: absolute !important;
    width: auto !important;
    background-color: #1a054d !important;
    color: antiquewhite;
}

#like-button {
    background-color: #0759a1;
    border: none;
    position: fixed;
    right: 15rem;
    bottom: 1rem;
    width: 60px;
    height: 50px;
}
#like-button i {
    font-size: 30px;
}

